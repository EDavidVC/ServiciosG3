<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#FFFFFF"
                tools:context=".ProfileFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:src="@drawable/ic_edit_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="19dp"/>

            <ImageView android:layout_width="match_parent"
                       android:layout_height="180dp"
                       android:background="@drawable/bg_cover"
                       android:id="@+id/profileCoverImage">
            </ImageView>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="120dp"
                          android:orientation="vertical">

                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                        android:layout_width="130dp"
                        android:layout_gravity="center"
                        android:layout_height="130dp"
                        android:id="@+id/profileImage"
                        android:src="@drawable/ic_default_profile_black"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">

                    <TextView android:layout_width="300dp"
                              android:layout_height="match_parent"
                              android:id="@+id/profileUserName"
                              android:paddingTop="16dp"
                              android:textColor="#350D00"
                              android:textStyle="bold"
                              android:textSize="25dp"
                              android:gravity="center"
                              android:layout_gravity="center_horizontal"/>

                    <TextView android:layout_width="350dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="15dp"
                              android:id="@+id/profileUserDescription"
                              android:textColor="#A32C1919"
                              android:textSize="16dp"
                              android:layout_gravity="center_horizontal"
                              android:gravity="center_horizontal"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:textColor="#DF131010"
                              android:layout_marginTop="10dp"
                              android:layout_marginBottom="10dp"
                              android:gravity="center"
                              android:textSize="24dp"
                              android:text="Contacto"
                              android:fontFamily="sans-serif-black"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="1dp"
                            android:background="#919191"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textColor="#DF131010"
                              android:fontFamily="sans-serif-black"
                              android:layout_marginStart="15dp"
                              android:textSize="20dp"
                              android:text="Celular"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/profileUserPhone"
                              android:textColor="#DF252525"
                              android:fontFamily="sans-serif-condensed"
                              android:layout_marginStart="23dp"
                              android:textSize="20dp"/>
                    <View
                            android:layout_width="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="1dp"
                            android:background="#919191"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textColor="#DF131010"
                              android:fontFamily="sans-serif-black"
                              android:layout_marginStart="15dp"
                              android:textSize="20dp"
                              android:text="Direccion"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/profileUserAddres"
                              android:textColor="#DF252525"
                              android:fontFamily="sans-serif-condensed"
                              android:layout_marginStart="23dp"
                              android:textSize="20dp"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="1dp"
                            android:background="#919191"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textColor="#DF131010"
                              android:fontFamily="sans-serif-black"
                              android:layout_marginStart="15dp"
                              android:textSize="20dp"
                              android:text="Correo"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/profileUserMail"
                              android:textColor="#DF252525"
                              android:fontFamily="sans-serif-condensed"
                              android:layout_marginStart="23dp"
                              android:textSize="20dp"/>


                    <View
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="1dp"
                            android:background="#919191"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="80dp"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_weight=".2"
                                  android:textColor="#DF131010"
                                  android:fontFamily="sans-serif-black"
                                  android:textSize="20dp"
                                  android:text="Profesional"/>
                        <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".2"
                                android:id="@+id/profileIsProfessionalCheck"
                                android:textColor="@color/black"
                                android:checked="false"/>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>