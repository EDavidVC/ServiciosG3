<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".registerActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_appservice"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:text="Registrarse"
        android:textSize="30dp" />

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Correo"
              android:textSize="20dp"
              android:fontFamily="sans-serif-light"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:inputType="textEmailAddress"
              android:id="@+id/RGEmail"
    />
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Contraseña"
              android:layout_marginRight="30dp"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="20dp"
              android:textSize="20dp"
              android:fontFamily="sans-serif-light"
              android:inputType="textPassword"
              android:id="@+id/RGPass"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="Confirmar Contraseña"
              android:textSize="20dp"
              android:layout_marginRight="30dp"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="20dp"
              android:fontFamily="sans-serif-light"
              android:inputType="textPassword"
              android:id="@+id/RGRepitePass"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20sp"
        android:layout_gravity="bottom"
        android:backgroundTint="?android:attr/colorMultiSelectHighlight"
        android:onClick="register"
        android:padding="10dp"
        android:text="Continuar"
        android:drawableRight="@drawable/ic_action_flecha"
        android:textSize="18dp" />


</androidx.appcompat.widget.LinearLayoutCompat>