<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        android:elevation="2dp"
        app:cardBackgroundColor="#EAEDED"
        app:contentPadding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/bg_services"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="150dp"
                   android:layout_height="120dp"
                   android:src="@drawable/logo_appservice"
                   android:id="@+id/service_logo"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="10dp"
                      android:textColor="#00015B"
                      android:textSize="24dp"
                      android:id="@+id/name_service"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#00015B"
                      android:layout_marginBottom="10dp"
                      android:text="DETALLES:"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#00015B"
                      android:id="@+id/details_service"
                      android:text=""/>
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>